<Window x:Class="StickyNoteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StickyNoteApp"
        mc:Ignorable="d"
        Title="Sticky Note App" Height="450" Width="450">
    <Grid>
        <TextBox x:Name="NoteTitle" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Enter your title here" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="NoteContent" HorizontalAlignment="Left" Height="200" Margin="10,39,0,0" TextWrapping="Wrap" Text="Enter your content here" VerticalAlignment="Top" Width="400"/>
        <Button x:Name="SaveNoteButton" Content="Save Note" HorizontalAlignment="Left" Margin="10,245,0,0" VerticalAlignment="Top" Width="75" Click="SaveNote_Click"/>
    </Grid>
</Window>
